<% @posts.each do |post| %>
  <h2><%= post.created_at.strftime('%a, %b %d, %Y %I:%M %p') %></h2>
  <% if post.user == current_user %>
    <p class="pull-right">
      <%= link_to post, data: { method: 'delete', confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' do %>
        <i class='glyphicon glyphicon-trash'></i>
        delete
      <% end %>
    </p>
  <% end %>
  <p class="byline">by: <%= post.user.email %></p>
  <p><%= post.body %></p>
<% end %>

<% if user_signed_in? %>
  <%= form_for Post.new do |form| %>
    <div class="form-group">
      <%= form.label :body, 'Share your thoughts:' %>
      <%= form.text_area :body, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.button 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
